# O.BRIGHTON Property Management System - .gitignore

# ========================================
# User Uploaded Files (DO NOT COMMIT)
# ========================================
file_uploads/landlords/*
file_uploads/listings_media/*
file_uploads/tenants/*
file_uploads/tickets_media/*
file_uploads/users/*

# Keep the upload directories but ignore their contents
!file_uploads/landlords/.gitkeep
!file_uploads/listings_media/.gitkeep
!file_uploads/tenants/.gitkeep
!file_uploads/tickets_media/.gitkeep
!file_uploads/users/.gitkeep

# Tenant and landlord file uploads
tenant/file_uploads/*
!tenant/file_uploads/.gitkeep

# ========================================
# Database Configuration (SENSITIVE)
# ========================================
_include/dbconnect.php

# ========================================
# Log Files
# ========================================
*.log
error_log
_include/error_log
landlord/error_log
tenant/error_log

